{
  "name": "device",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "monitor": "az iot hub monitor-events --hub-name $HUB --device-id $DEVICE",
    "start": "node index.js",
    "device:x509": "az iot hub device-identity create -d $DEVICE -n $HUB --am x509_thumbprint --output-dir cert -oyaml",
    "postdevice:x509": "npm run postdevice",
    "device": "az iot hub device-identity create -d $DEVICE -n $HUB -oyaml",
    "postdevice": "DEVICE_CONNECTION_STRING=$(az iot hub device-identity show-connection-string --hub-name $HUB --device-id $DEVICE -otsv)",
    "device:rm": "az iot hub device-identity delete -d $DEVICE -n $HUB -oyaml && rm cert/*.pem",
    "docker:build": "docker-compose -p iot build",
    "docker:push": "docker-compose push",
    "docker": "docker-compose -p iot up -d",
    "docker:stop": "docker-compose -p iot stop && docker-compose -p iot rm --force",
    "deploy": "aci/deploy.sh && az container create --resource-group ${GROUP} --file aci/deploy.yaml -oyaml",
    "test": "tape test/*.spec.js",
    "watch": "watch 'clear && npm run -s test' .",
    "clean": "rm -rf node_modules"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "azure-iot-device": "^1.9.1",
    "azure-iot-device-amqp": "^1.9.1",
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1"
  },
  "devDependencies": {
    "eslint": "^5.12.1",
    "tape": "^4.9.2",
    "watch": "^1.0.2"
  }
}
